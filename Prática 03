//Crie uma função que calcule o índice de massa corporal (IMC) de uma pessoa, a partir de sua altura, em metros, e peso, em quilogramas, que serão recebidos como parâmetro.
function calcularIndice(altura, peso){
    let indiceCorporal = peso / (altura * altura);
}

//Crie uma função que calcule o valor do fatorial de um número passado como parâmetro.
function calcularFatorial(numero){
    if (numero == 0 || numero == 1){
        return 1;
    }
    let fatorial = 1;
    for ( let i = 2; i <= numero; i++){
        fatorial*= i;
    }
    return fatorial;
}
let numero = 5;
let resultado = calcularFatorial(numero);
console.log('O fatorial de '+numero+' é '+resultado);

//Crie uma função que converte um valor em dólar, passado como parâmetro, e retorna o valor equivalente em reais. Para isso, considere a cotação do dólar igual a R$4,80.
function converterDolar(dolar){
    let cotacaoDolar = 4.80;
    let conversao = dolar * cotacaoDolar;
    return conversao.toFixed(2);
}
let valorDolar = 50;
let conversao = converterDolar(dolar);
console.log(valorDolar + 'dólares, equivalem a R$'+conversao);

//Crie uma função que mostre na tela a área e o perímetro de uma sala retangular, utilizando altura e largura que serão dadas como parâmetro.
function areaSala(altura, largura){
    let areaDaSala = largura * altura;
    let perimetroDaSala = 2* (largura + altura);
    console.log('Área da sala:'+areaDaSala+' metros quadrados.');
    console.log('Perímetro da sala:'+perimetroDaSala+' metros.');
}
let altura = 8;
let largura = 6;
areaDaSala(altura,largura);

//Crie uma função que mostre na tela a área e o perímetro de uma sala circular, utilizando seu raio que será fornecido como parâmetro. Considere Pi = 3,14.
function areaCircular(raio){
    let areaSala = Math.PI * raio * raio;
    let perimetroSala = 2 * Math.PI * raio;
    console.log('Área da sala circular:'+areaSala.toFixed(2)+' metros quadrados.');
    console.log('Perímetro da sala circular:'+perimetroSala.toFixed(2)+'metros.');
}
let raio = 5;
areaCircular(raio);

//Crie uma função que mostre na tela a tabuada de um número dado como parâmetro.
function calcularTabuada(numeroo){
    for (let i =1; i <= 10; i++){
        let resultado = numeroo * i;
        console.log(numeroo+'x'+i+'='+resultado);
    }
}
let numeroo = 7;
calcularTabuada(numeroo);
